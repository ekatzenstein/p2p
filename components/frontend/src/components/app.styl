.app-container {
  display: flex;
  justify-content: center;
  max-width: 100vw;

  h1, h2 {
    font-size: txt-size-xlg;
    font-family: chronicle;
    text-align: center;
    font-weight: weight;
    width: 100%;
    max-width: max-width-sub;
    margin: 0;
  }

  h1 {
    padding: 0 0 gutter;
    margin: gutter 0;
    font-size: txt-size-title;
    width: 100%;
    border-bottom: divider-lt;
  }

  h2 {
    padding-bottom: gutter;
    border-bottom: divider-lt;
  }

  .content-container {
    .header-content {
      max-width: max-width-sub;
      width: 100%;
      display: flex;
      justify-content: center;
      // border-top: 1px solid black;
      border-bottom: divider;
      padding: gutter 0;
    }

    shadow();
    min-height: 100vh;
    max-width: max-width;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    align-content: flex-start;
    flex-wrap: wrap;
    padding-bottom: 100px;
    padding-top: gutter;

    p {
      max-width: max-width-sub;
      padding: (gutter * 2) 0;
      border-bottom: divider;
      margin: 0;
      // padding: (gutter / 2);
      // background: accent;
      // round();
    }
  }
}