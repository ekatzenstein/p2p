.app-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  max-width: 100vw;
  padding-bottom: (gutter * 2);

  a {
    min-width: 100%;
    margin: (gutter * 2) 0 gutter;

    img {
      min-width: 100%;
    }
  }

  h1, h2 {
    font-size: txt-size-xlg;
    font-family: chronicle;
    text-align: center;
    font-weight: weight;
    width: 100%;
    max-width: max-width-sub;
    margin: 0;
  }

  h1 {
    padding: 0 0 gutter;
    margin: gutter 0;
    font-size: txt-size-title;
    width: 100%;
    border-bottom: divider-lt;
  }

  h2 {
    padding-bottom: gutter;
    border-bottom: divider-lt;
  }

  .content-container {
    // border-top: divider;
    // border-bottom: divider;
    margin: gutter;
    padding: gutter;

    .link-row {
      width: 100%;
      text-align: center;
      margin: (gutter / 3) 0;
      font-family: chronicle;

      &:first-child {
        margin-top: (gutter * 2);
      }

      a {
        text-decoration: none;
        font-size: 40px;

        &:before {
          content: 'pg ';
        }

        &:visited, &:active {
          color: inherit;
        }
      }
    }

    .header-content {
      max-width: max-width-sub;
      width: 100%;
      display: flex;
      justify-content: center;
      // border-top: 1px solid black;
      border-bottom: divider;
      padding: gutter 0;
    }

    shadow();
    min-height: 100vh;
    max-width: max-width;
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    align-content: flex-start;
    flex-wrap: wrap;
    padding-bottom: 100px;
    padding-top: gutter;

    p {
      max-width: max-width-sub;
      padding: (gutter * 2) 0;
      // border-bottom: divider;
      margin: 0;
      font-size: 18px;
      // padding: (gutter / 2);
      // background: accent;
      // round();
    }
  }
}